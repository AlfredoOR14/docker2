pipeline {
    environment {
        registry = 'registry.hub.docker.com'
        repository = 'alfredoor14/jenkins-docker-demo'
        tag = 'latest'
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Generando imagen') {
            steps {
                script {
                    dockerImage = docker.build("${repository}:${tag}")
                }
            }
        }
        stage('Subiendo imagen al registry') {
            steps {
                script {
                    docker.withRegistry('https://' + registry, registryCredential) {
                        dockerImage.push("${tag}")
                    }
                }
            }
        }
        stage('Limpiando el entorno') {
            steps {
                script {
                    sh "docker rmi ${repository}:${tag}"
                    sh "docker rmi ${registry}/${repository}:${tag}"
                }
            }
        }
    }
}
