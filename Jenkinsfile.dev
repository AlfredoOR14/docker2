pipeline {
    environment {
        registry = 'registry-1.docker.io'
        tag = "aor/jenkins-docker-demo"
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Generando imagen') {
            steps {
                script {
                    dockerImage = docker.build(tag + ":${BUILD_NUMBER}")
                }
            }
        }
        stage('Subiendo imagen al registry') {
            steps {
                script {
                    docker.withRegistry('https://' + registry, registryCredential) {
                        dockerImage.push("${tag}:${BUILD_NUMBER}")
                        dockerImage.push("${tag}:latest")
                    }
                }
            }
        }
        stage('Limpiando el entorno') {
            steps {
                sh "docker rmi ${tag}:${BUILD_NUMBER}"
                sh "docker rmi ${registry}/${tag}:${BUILD_NUMBER}"
                sh "docker rmi ${registry}/${tag}:latest"
            }
        }
    }
}
