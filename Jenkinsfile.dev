pipeline {
    agent any

    environment {
        DOCKERFILE_PATH = '.'
        IMAGE_NAME = 'demo2'
        WORKSPACE_PATH = 'C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\docker' // Ruta al workspace en Windows
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Construir la imagen Docker
                    bat "docker build -t ${IMAGE_NAME} -f ${DOCKERFILE_PATH}\\Dockerfile ."
                    
                    // Crear un contenedor temporal a partir de la imagen construida sin iniciarlo
                    def tempContainerId = bat(script: "docker create ${IMAGE_NAME}", returnStdout: true).trim()
                    try {
                        // Copiar el archivo JAR desde el contenedor a la ruta espec√≠fica en el workspace
                        bat "docker cp ${tempContainerId}:/opt/app/app.jar ${WORKSPACE_PATH}"
                    } finally {
                        // Esperar 1 minuto antes de eliminar el contenedor temporal
                        bat "timeout /t 60" // Timeout en Windows para esperar 1 minuto
                        // Eliminar el contenedor temporal
                        bat "docker rm ${tempContainerId}"
                    }
                }
            }
        }
    }
}
