pipeline {
    environment {
        AWS_REGION = 'us-east-1' //us-west-2
        AWS_ECR_URL_DEV = '053546436729.dkr.ecr.us-east-1.amazonaws.com' //846541480997.dkr.ecr.us-west-2.amazonaws.com
        AWS_ECR_IMAGE = 'jenkins-docker-demo'
        nombreTag = "${BUILD_NUMBER}"
        dockerImage = ''
    }
    agent any
    stages {
        stage('Generando imagen') {
            steps{
                script {
                    dockerImage = docker.build("${AWS_ECR_IMAGE}:${nombreTag}")
                }
            }   
        }
        stage('Registro de contenedor en ECR') {
            steps {
                script {
                    sh "aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${AWS_ECR_URL_DEV}"
                    sh "docker tag ${AWS_ECR_IMAGE}:${nombreTag} ${AWS_ECR_URL_DEV}/${AWS_ECR_IMAGE}:${nombreTag}"
                    sh "docker push ${AWS_ECR_URL_DEV}/${AWS_ECR_IMAGE}:${nombreTag}"
                    sh "docker rmi ${AWS_ECR_URL_DEV}/${AWS_ECR_IMAGE}:${nombreTag}"
                    sh "docker rmi ${AWS_ECR_IMAGE}:${nombreTag}"
                }
            }
        }
        stage('Limpiando el entorno') {
            steps{
                sh "docker rmi ${AWS_ECR_IMAGE}:${nombreTag}"
                sh "docker rmi ${AWS_ECR_URL_DEV}/${AWS_ECR_IMAGE}:${nombreTag}"
            }
        }
    }
}
