pipeline {
    agent any

    environment {
        DOCKERFILE_PATH = '.'
        IMAGE_NAME = 'demo2'
        WORKSPACE_PATH = '/var/lib/jenkins/workspace/docker'
    }

    stages {
        stage('Build Docker Image') {
           steps {
                sh "docker build -t ${IMAGE_NAME} -f ${DOCKERFILE_PATH}/Dockerfile ."
            }
        }
        stage('Extract JAR from Image') {
            steps {
                script {
                    // Crear un contenedor temporal a partir de la imagen construida sin iniciarlo
                    def tempContainerId = bat(script: "docker create ${IMAGE_NAME}", returnStatus: true).trim()
                    // Copiar el archivo JAR desde el contenedor a la ruta espec√≠fica en el workspace
                    sh "docker cp ${tempContainerId}:/opt/app/*.jar ${WORKSPACE_PATH}"
                    // Esperar 1 minuto
                    sleep time: 60, unit: 'SECONDS'
                    // Eliminar el contenedor temporal
                    sh "docker rm ${tempContainerId}"
                }
            }
        }
    }
}

