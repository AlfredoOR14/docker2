pipeline {
    agent any

    environment {
        DOCKERFILE_PATH = '.'
        IMAGEN = 'demo2'
        WORKSPACE_PATH = 'var/lib/jenkins/workspace/docker'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${IMAGEN} -f ${DOCKERFILE_PATH}/Dockerfile ."
            }
        }
    }
}
