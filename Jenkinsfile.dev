pipeline {
    environment {
        AWS_REGION = 'us-east-1' // Cambia a la regi√≥n que necesites
        AWS_ECR_URL_DEV = '053546436729.dkr.ecr.us-east-1.amazonaws.com' // Cambia a tu URL de ECR
        AWS_ECR_IMAGE = 'jenkins-docker-demo'
        nombreTag = "${BUILD_NUMBER}"
        dockerImage = ''
        AWS_IAM_PROFILE = 'luis-cuenta'
    }
    agent any
    stages {
        stage('Generando imagen') {
            steps{
                script {
                    dockerImage = docker.build("${AWS_ECR_IMAGE}:${nombreTag}")
                }
            }   
        }
        stage('Registro de contenedor en ECR') {
            steps {
                dir('.') {
                    script {
                        sh "cat ~/.aws/credentials"
                        def ecrLogin = sh(script: "aws ecr get-login-password --region ${AWS_REGION} --profile ${AWS_IAM_PROFILE}", returnStdout: true).trim()
                        sh "echo ${ecrLogin} | docker login --username AWS --password-stdin ${AWS_ECR_URL_DEV}"
                        
                        sh "docker tag ${AWS_ECR_IMAGE}:${nombreTag} ${AWS_ECR_URL_DEV}/${AWS_ECR_IMAGE}:${nombreTag}"
                        sh "docker push ${AWS_ECR_URL_DEV}/${AWS_ECR_IMAGE}:${nombreTag}"
                    }
                }
            }
        }
        stage('Limpiando el entorno') {
            steps{
                sh "docker rmi ${AWS_ECR_IMAGE}:${nombreTag}"
                sh "docker rmi ${AWS_ECR_URL_DEV}/${AWS_ECR_IMAGE}:${nombreTag}"
            }
        }
    }
}

